            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView30"
            android:layout_marginEnd="14dp"
            android:src="@drawable/confirmation_pending" />

        <Button
            android:id="@+id/orderDetails_cancelOrderBtn"
