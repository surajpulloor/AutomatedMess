<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/customerCart_listView_itemNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/customerCart_listView_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:text="Chicken Kebab"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/customerCart_listView_itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="64dp"
        android:text="â‚¹ 523.63"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/customerCart_listView_itemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-64dp"
        android:layout_toEndOf="@+id/customerCart_listView_itemPrice"
        android:paddingLeft="5dp"
        android:text="1x3"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/customerCart_listView_foodType"
        android:layout_width="33dp"
        android:layout_height="29dp"
        android:layout_alignEnd="@+id/customerCart_listView_itemQuantity"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/veg_symbol" />

    <TextView
        android:id="@+id/customerCart_listView_categoryType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/customerCart_listView_itemPrice"
        android:layout_alignTop="@+id/customerCart_listView_foodType"
        android:text="Punjabi"
        android:textSize="24sp" />
</RelativeLayout>
